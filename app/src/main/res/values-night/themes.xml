<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Millennium" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialTextViewFontRegular">
        <item name="android:fontFamily">@font/balsami_regular</item>
    </style>

    <style name="MaterialTextViewFontBold">
        <item name="android:fontFamily">@font/balsami_bold</item>
    </style>

    <style name="MaterialTextViewRegister" parent="MaterialTextViewFontRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="MaterialTextViewTextColorFontBold" parent="MaterialTextViewFontBold">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialTextViewRegisterNow" parent="MaterialTextViewFontBold">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="ViewBackground">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageViewIconEmailColor">
        <item name="android:src">@drawable/ic_email_dark</item>
    </style>

    <style name="ImageViewIconPasswordColor">
        <item name="android:src">@drawable/ic_password_dark</item>
    </style>

    <style name="ImageViewIconUserColor">
        <item name="android:src">@drawable/ic_user_dark</item>
    </style>

    <style name="ImageViewIconPhoneColor">
        <item name="android:src">@drawable/ic_phone_dark</item>
    </style>

    <style name="ImageViewIconCameraColor">
        <item name="android:src">@drawable/ic_camera_dark</item>
    </style>

    <style name="TextInputLayoutEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayoutEndIconTint.Password" parent="TextInputLayoutEndIconTint">
        <item name="passwordToggleTint">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialButtonBackground">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/corner_radius_buttom</item>
        <item name="android:fontFamily">@font/balsami_bold</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme_night</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!--ESTILO PARA EL BOTTOM NAVIGATION VIEW-->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemBackground">@color/colorPrimaryDark</item>
        <item name="itemIconSize">@dimen/size_icons_bottom_nav_menu</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/balsami_regular</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">@font/balsami_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--ESTILO PARA EL BOTTOMSHEET-->
    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>