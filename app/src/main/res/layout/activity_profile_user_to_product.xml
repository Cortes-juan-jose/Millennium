<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.profile.ProfileFragment">

    <!--FLECHA IR HACIA ATRAS-->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/size_icon_back"
        android:layout_height="@dimen/size_icon_back"
        android:layout_gravity="start"
        android:elevation="6dp"
        android:layout_marginStart="@dimen/margin_start_ic_back_toolbar"
        android:layout_marginTop="@dimen/margin_top_ic_back_toolbar"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/cd_ic_back" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/balsami_bold"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:lines="1"
        android:ems="10"
        android:ellipsize="end"
        android:text="@string/mtv_sin_internet"
        android:textSize="20sp" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctl_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--TODO EL CONTENIDO DEL APPBARLAYOUT-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <!--VISTA PARA OSCURECER LA IMAGEN DE LA PORTADA-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/black"/>

                <!--PORTADA-->
                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera"
                    android:alpha="0.7"
                    android:contentDescription="@string/cd_ic_camera" />

                <!--DATOS DEL TELEFONO Y PRODUCTOS Y LA IMG DEL PERFIL-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="160dp">

                    <!--NUMERO PUBLICACIONES-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mtv_uploaded_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/balsami_bold"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:text="@string/mtv_sin_internet"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/balsami_bold"
                            android:text="@string/mtv_productos"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!--IMG PERFIL-->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_image_profile"
                        android:layout_width="40dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_user_profile"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        app:civ_circle_background_color="@color/grey" />

                    <!--NUMERO DE TELEFONO-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mtv_opinions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/balsami_bold"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:text="@string/mtv_sin_internet" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/balsami_bold"
                            android:text="@string/mtv_opiniones"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--CORREO ELECTRONICO DEL USUARIO-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="270dp"
                    android:layout_marginBottom="@dimen/max_padding_view"
                    android:layout_gravity="center_horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        style="@style/MaterialTextViewEmailProfile"
                        android:id="@+id/mtv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/max_padding_view"
                        android:text="@string/mtv_sin_internet"
                        android:layout_gravity="center" />
                </LinearLayout>

            </FrameLayout>

            <!--TOOLBAR-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_profile_to_user"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolbarThemeText"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:theme="@style/TabLayoutTheme"
            android:id="@+id/tl_products_opinions"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            app:tabMode="fixed"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!--SCROLL PARA QUE EL APBARLAYOUT SE ESCONDA-->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_products_opinions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>